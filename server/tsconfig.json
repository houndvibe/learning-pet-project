{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src"
  }
}
